<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/yourSelectedColor</item>
        <item name="colorPrimaryDark">@color/Black</item>
        <item name="colorAccent">@color/darkgray</item>

    </style>



    <style name="AppThemeNoActionbar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextInputFilledStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">#F44336</item>
        <item name="hintTextColor">#8BC34A</item>
        <item name="boxStrokeColor">#F44336</item>
    </style>


    <style name="TextInputOutlinedStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">#F44336</item>
        <item name="hintTextColor">#8BC34A</item>
        <item name="boxStrokeColor">#F44336</item>
    </style>

</resources>